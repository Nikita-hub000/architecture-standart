@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Context

Person(operator, "Оператор кол-центра", "Консультирует клиентов")
Person(partner_operator, "Оператор партнёрского кол-центра", "Консультирует клиентов по файлам ставок")

System(rates_service, "Сервис ставок", "API + БД", "Единый источник депозитных ставок")
System(callcenter_system, "Система кол-центра банка", "CRM", "Отображает ставки оператору")
System_Ext(partner_cc, "Партнёрский кол-центр", "Внешняя система", "Получает файлы ставок")
System_Ext(sftp_server, "SFTP-сервер партнёра", "", "Принимает файлы")

Rel(operator, callcenter_system, "Запросы ставок")
Rel(callcenter_system, rates_service, "REST: получить актуальные ставки")

Rel(rates_service, sftp_server, "Выгрузка файла ставок", "SFTP")
Rel(partner_cc, sftp_server, "Забор файла", "SFTP")

@enduml
